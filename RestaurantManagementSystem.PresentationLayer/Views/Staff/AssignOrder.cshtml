@model RestaurantManagementSystem.Application.DTOs.Staff.StaffDto

@{
    ViewData["Title"] = "Assign Order to Staff";
}

<h2>Assign Order</h2>

<form asp-action="AssignOrder" method="post">
    <input type="hidden" asp-for="Id" name="staffId" />
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label for="orderId">Order ID</label>
        <input type="number" name="orderId" class="form-control" required />
    </div>
    <div class="form-group mt-3">
        <input type="submit" value="Assign" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</form>