@model dynamic

@{
    ViewData["Title"] = "Home - Admin Panel";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid p-0">
    <!-- Hero Section -->
    <div class="bg-primary text-white text-center py-5" style="min-height: 200px;">
        <h1 class="display-4"><i class="fas fa-restaurant"></i> Restaurant Management System</h1>
        <p class="lead">Welcome to the admin dashboard. Manage your restaurant efficiently!</p>
    </div>

    <!-- Stats Cards -->
    <div class="row g-4 p-4">
        <div class="col-12 col-md-4">
            <div class="card text-center h-100">
                <div class="card-body">
                    <h5 class="card-title"><i class="fas fa-chair"></i> Tables</h5>
                    <p class="card-text display-6">@(ViewBag?.TableCount ?? 0)</p>
                    <a asp-controller="Tables" asp-action="Index" class="btn btn-primary">View Tables</a>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-4">
            <div class="card text-center h-100">
                <div class="card-body">
                    <h5 class="card-title"><i class="fas fa-shopping-cart"></i> Orders</h5>
                    <p class="card-text display-6">@(ViewBag?.OrderCount ?? 0)</p>
                    <a asp-controller="Orders" asp-action="Index" class="btn btn-primary">View Orders</a>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-4">
            <div class="card text-center h-100">
                <div class="card-body">
                    <h5 class="card-title"><i class="fas fa-users"></i> Staff</h5>
                    <p class="card-text display-6">@(ViewBag?.StaffCount ?? 0)</p>
                    <a asp-controller="Staff" asp-action="Index" class="btn btn-primary">View Staff</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row p-4">
        <div class="col-12">
            <h2 class="text-primary mb-4"><i class="fas fa-tools"></i> Quick Actions</h2>
            <div class="d-flex flex-wrap gap-3 justify-content-center">
                <a asp-controller="Categories" asp-action="Index" class="btn btn-success btn-lg"><i class="fas fa-list"></i> Manage Categories</a>
                <a asp-controller="MenuItems" asp-action="Index" class="btn btn-success btn-lg"><i class="fas fa-utensils"></i> Manage Menu Items</a>
                <a asp-controller="Tables" asp-action="Create" class="btn btn-success btn-lg"><i class="fas fa-plus"></i> Add Table</a>
                <a asp-controller="Staff" asp-action="Create" class="btn btn-success btn-lg"><i class="fas fa-user-plus"></i> Add Staff</a>
                <a asp-controller="Analytics" asp-action="Index" class="btn btn-success btn-lg"><i class="fas fa-chart-line"></i> View Analytics</a>
            </div>
        </div>
    </div>
</div>