@model RestaurantManagementSystem.Application.DTOs.Order.OrderDto
@using RestaurantManagementSystem.Domain.Enums
@{
    ViewData["Title"] = "Order Details";
}

<h2 class="mb-4 text-primary text-center"><i class="fas fa-info-circle"></i> Order Details</h2>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Order #@Model.Id</h5>
                    <p class="card-text"><strong>Customer ID:</strong> @Model.CustomerId</p>
                    <p class="card-text"><strong>Order Type:</strong> @Model.OrderType</p>
                    <p class="card-text"><strong>Status:</strong> @Model.Status</p>
                    <p class="card-text"><strong>Delivery Address:</strong> @Model.DeliveryAddress</p>
                    <p class="card-text"><strong>Total:</strong> $@Model.Total.ToString("F2")</p>
                    <p class="card-text"><strong>Order Date:</strong> @Model.OrderDate.ToString("g")</p>
                    <p class="card-text"><strong>Estimated Delivery:</strong> @Model.EstimatedDeliveryTime?.ToString("g")</p>
                    <p class="card-text"><strong>Notification:</strong> @ViewBag.Message</p>
                    <h6>Items:</h6>
                    <ul class="list-group">
                        @foreach (var item in Model.OrderItems)
                        {
                            <li class="list-group-item">@item.Quantity x MenuItem #@item.MenuItemId (Subtotal: $@item.Subtotal.ToString("F2"))</li>
                        }
                    </ul>
                    <div class="mt-3">
                        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning ms-2">Edit</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>