@model IEnumerable<RestaurantManagementSystem.Application.DTOs.Order.OrderDto>

@{
    ViewData["Title"] = "Orders";
}

<h2 class="mb-4 text-primary"><i class="fas fa-shopping-cart"></i> Orders List</h2>

<a asp-action="Create" class="btn btn-success mb-3"><i class="fas fa-plus"></i> Add New Order</a>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Customer</th>
                <th>Total</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.CustomerId</td>
                    <td>@item.Total</td>
                    <td>@item.Status</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm"><i class="fas fa-eye"></i> Details</a>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm"><i class="fas fa-edit"></i> Edit</a>
                        <form asp-action="Delete" method="post" style="display:inline;">
                            <input type="hidden" name="id" value="@item.Id" />
                            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure?')"><i class="fas fa-trash"></i> Cancel</button>
                        </form>

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>